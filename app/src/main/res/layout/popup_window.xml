<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
    android:background="#62def8"
    android:layout_centerInParent="true"
tools:context=".TempReadActivity">

    <Spinner
        android:id="@+id/spinner_PopUp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_PopUp"
        android:text="Max rows"


        />

    <TextView
        android:id="@+id/textview_PopUp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is a popup window."
        android:textSize="22sp"
        />

    <Button
        android:id="@+id/button_PopUp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_PopUp"
        android:text="Buttontest2"
        android:layout_toRightOf="@id/spinner_PopUp1"
        />

    <Button
        android:id="@+id/button_PopUp3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textview_PopUp"
        android:text="Buttontest3"
        android:layout_toRightOf="@id/button_PopUp2"/>
</RelativeLayout>